{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "deploy": {
        "dependsOn": ["build", "test", "lint"]
    },
    "test": {
        "dependsOn": ["build"],
        "inputs": ["src/**/*tsx", "src/**/*ts", "test/**/*spec.tsx", "test/**/*spec.js"]
    },
    "lint": {},
    "dev": {
        "cache": false,
        "persistent": true
    }
  }
}